<%= render partial: "layouts/user_menu" %>
<h3 class="text-center"> New Location</h3>
<%= form_for @location, url: {action: 'create'} do |form|%>
    <%= form.label :name, for:'name'%>
    <div class="form-group">
        <%= form.text_field :name, class:'form-control', required: true%>
    </div>
        <%= form.label :description %>
    <div class="form-group">
        <%= form.text_area :description, class:'form-control', size: "3x3"%>
    </div>
    <%= form.label :address %>
    <div class="form-group">
        <%= form.text_field :address, required: true, class: 'form-control' %>
    </div>
    <%= form.label :max_slots %>
    <div class="form-group">
        <%= form.number_field :max_slots, required: true, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= form.submit "Register Location", class: 'btn btn-success'%>
        <%= link_to "Cancel", locations_path, class: 'btn btn-default'%>
</div>
<% end %>